#jinja2: lstrip_blocks: True

system {
    host-name {{ inventory_hostname }};
    replace:
    name-server {
        {% for server in aja2_host.dns_servers %}
           {{ server }};
        {% endfor %}
    }
    
    services {
      delete: ftp;
      delete: telnet;
      delete: web-management;
      ssh {
        root-login allow;
      }
      netconf {
        ssh;
      }
    }

}
